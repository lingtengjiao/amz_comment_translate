{
  "manifest_version": 3,
  "name": "亚马逊产品洞察助手-洞察大王",
  "version": "1.2.3",
  "description": "一键洞察，听懂用户『真心话』！智能采集亚马逊评论，AI自动翻译分析，让产品洞察更简单。支持11个站点、批量分析、竞品对比、市场细分。One-click insights, understand user feedback! Smart review collection, AI translation & analysis.",
  "author": "洞察大王团队",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.ca/*",
    "https://98kamz.com/*",
    "https://*.98kamz.com/*"
  ],
  
  "externally_connectable": {
    "matches": [
      "https://98kamz.com/*",
      "https://*.98kamz.com/*"
    ]
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "洞察大王"
  },
  
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.ca/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/content/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://98kamz.com/*",
        "https://*.98kamz.com/*"
      ],
      "js": ["src/content/auth-sync.js"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["src/content/overlay.css"],
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.ca/*"
      ]
    }
  ]
}

